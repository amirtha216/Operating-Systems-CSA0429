#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd;
    char buffer[100];
    struct stat fileStat;
    DIR *dir;
    struct dirent *entry;

    fd = open("sample.txt", O_RDWR | O_CREAT, 0644);
    write(fd, "Hello UNIX\n", 11);

    lseek(fd, 0, SEEK_SET);
    read(fd, buffer, 11);
    buffer[11] = '\0';
    printf("File Content: %s\n", buffer);

    stat("sample.txt", &fileStat);
    printf("File Size: %ld bytes\n", fileStat.st_size);

    printf("\nDirectory Listing:\n");
    dir = opendir(".");
    while((entry = readdir(dir)) != NULL)
        printf("%s\n", entry->d_name);

    closedir(dir);
    close(fd);

    return 0;
}
