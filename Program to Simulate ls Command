#include <stdio.h>
#include <dirent.h>
#include <sys/stat.h>

int main() {
    DIR *dir;
    struct dirent *entry;
    struct stat fileStat;

    dir = opendir(".");
    if (!dir) {
        perror("opendir failed");
        return 1;
    }

    printf("Files in current directory:\n");

    while ((entry = readdir(dir)) != NULL) {
        stat(entry->d_name, &fileStat);
        printf("%-20s %10ld bytes\n", entry->d_name, fileStat.st_size);
    }

    closedir(dir);
    return 0;
}
