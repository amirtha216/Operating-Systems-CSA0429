#include <stdio.h>

int main() {
    int n, i, time = 0, remain, time_quantum;
    int burst[20], remain_burst[20], wait_time = 0, turnaround_time = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    remain = n;

    for(i = 0; i < n; i++) {
        printf("Enter burst time for P%d: ", i+1);
        scanf("%d", &burst[i]);
        remain_burst[i] = burst[i];
    }

    printf("Enter Time Quantum: ");
    scanf("%d", &time_quantum);

    while(remain != 0) {
        for(i = 0; i < n; i++) {
            if(remain_burst[i] > 0) {
                if(remain_burst[i] <= time_quantum) {
                    time += remain_burst[i];
                    wait_time += time - burst[i];
                    turnaround_time += time;
                    remain_burst[i] = 0;
                    remain--;
                } else {
                    remain_burst[i] -= time_quantum;
                    time += time_quantum;
                }
            }
        }
    }

    printf("\nAverage Waiting Time = %.2f", (float)wait_time/n);
    printf("\nAverage Turnaround Time = %.2f\n", (float)turnaround_time/n);

    return 0;
}
