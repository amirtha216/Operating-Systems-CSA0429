#include <stdio.h>
#include <stdlib.h>

int main() {
    int req[50], n, head, size, i, j;
    int seek = 0, temp;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter request sequence: ");
    for(i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter total disk size: ");
    scanf("%d", &size);

    // Sort
    for(i = 0; i < n-1; i++)
        for(j = i+1; j < n; j++)
            if(req[i] > req[j]) {
                temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }

    printf("\nSeek Sequence: %d ", head);

    // Move right
    for(i = 0; i < n; i++) {
        if(req[i] >= head) {
            seek += abs(req[i] - head);
            head = req[i];
            printf("-> %d ", head);
        }
    }

    // Jump to start
    seek += abs(size - 1 - head);
    head = 0;
    seek += size - 1;

    // Continue right
    for(i = 0; i < n; i++) {
        if(req[i] < head) {
            seek += abs(req[i] - head);
            head = req[i];
            printf("-> %d ", head);
        }
    }

    printf("\nTotal Seek Time = %d\n", seek);

    return 0;
}
