#include <stdio.h>

int main(){
    int n, bt[10], pr[10], rt[10], t=0, complete=0, min;
    int shortest;

    printf("Enter number of processes: ");
    scanf("%d",&n);

    for(int i=0;i<n;i++){
        printf("Burst & Priority for P%d: ",i+1);
        scanf("%d%d",&bt[i],&pr[i]);
        rt[i]=bt[i];
    }

    while(complete<n){
        min=9999;
        for(int i=0;i<n;i++){
            if(rt[i]>0 && pr[i]<min){
                min=pr[i];
                shortest=i;
            }
        }
        rt[shortest]--;
        t++;

        if(rt[shortest]==0)
            complete++;
    }

    printf("Execution completed using Preemptive Priority\n");
    return 0;
}
